<Window x:Class="Warehouse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Warehouse" Height="768" Width="1220" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Label Content="(*)" HorizontalAlignment="Left" Margin="42,38,0,0" VerticalAlignment="Top" Foreground="Red" RenderTransformOrigin="0.5,2" Height="26" Width="22"/>
        <Label x:Name="lblCusCd" Content="Mã khách hàng:" HorizontalAlignment="Left" Margin="56,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.957,1.077" Grid.ColumnSpan="2" Height="26" Width="94"/>
        <TextBox x:Name="txtCusCd" HorizontalAlignment="Left" Height="23" Margin="6,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="(*)" HorizontalAlignment="Left" Margin="124,38,0,0" VerticalAlignment="Top" Foreground="Red" RenderTransformOrigin="0.5,2" Height="26" Width="22" Grid.Column="1"/>
        <Label x:Name="lblCusName" Content="Tên khách hàng:" HorizontalAlignment="Left" Margin="138,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.957,1.077" Grid.Column="1" Height="26" Width="96"/>
        <TextBox x:Name="txtCusName" HorizontalAlignment="Left" Height="23" Margin="237,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" Grid.Column="1"/>
        <Label x:Name="lblSetDate" Content="Ngày mua:" HorizontalAlignment="Left" Margin="35,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.957,1.077" Grid.Column="2" Height="26" Width="67"/>
        <Label Content="(*)" HorizontalAlignment="Left" Margin="20,38,0,0" VerticalAlignment="Top" Foreground="Red" RenderTransformOrigin="0.5,2" Height="26" Width="22" Grid.Column="2"/>
        <TextBox x:Name="txtSetDate" HorizontalAlignment="Left" Height="23" Margin="105,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label x:Name="lblTitle" Content="Tiêu đề:" HorizontalAlignment="Left" Margin="98,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.957,1.077" Height="26" Width="51" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="23" Margin="6,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="632" Grid.Column="1"/>
        <Label x:Name="lblDescription" Content="Diễn giải:" HorizontalAlignment="Left" Margin="90,93,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.957,1.077" Height="26" Width="59" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Height="51" Margin="6,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="632" Grid.Column="1"/>
        <Label x:Name="lblTotalAmount" Content="Tổng tiền hàng:" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.957,1.077" Height="26" Width="93" Grid.Column="2"/>
        <TextBox x:Name="txtTotalAmount" HorizontalAlignment="Left" Height="23" Margin="105,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False" Grid.Column="2"/>
        <DataGrid HorizontalAlignment="Left" Height="280" Margin="28,164,0,0" VerticalAlignment="Top" Width="789" Grid.ColumnSpan="3" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Mã sản phẩm" Width="90"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Tên sản phẩm" Width="300"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Đơn vị tính" Width="100"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Đơn giá" Width="100"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Số lượng" Width="80"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Thành tiền" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="lblComment" Content="Chú thích:" HorizontalAlignment="Left" Margin="86,452,0,-291" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="26" Width="63"/>
        <TextBox x:Name="txtComment" HorizontalAlignment="Left" Height="51" Margin="6,452,0,-316" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="493" Grid.Column="1"/>
        <Label x:Name="lblAttachments" Content="Tập tin đính kèm:" HorizontalAlignment="Left" Margin="47,508,0,-347" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="26" Width="102"/>
        <TextBox x:Name="txtAttachments" HorizontalAlignment="Left" Height="23" Margin="6,508,0,-344" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
    </Grid>
</Window>
