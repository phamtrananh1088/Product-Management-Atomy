<Window x:Class="Property1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sản phẩm" Height="768" Width="1020"  WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="881*"/>
        </Grid.ColumnDefinitions>
        <Label Content="(*)" HorizontalAlignment="Left" Margin="32,55,0,0" VerticalAlignment="Top" Foreground="Red" RenderTransformOrigin="0.5,2"/>
        <Label x:Name="lblPropCd" Content="Mã sản phẩm:" HorizontalAlignment="Left" Margin="49,27,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtPropCd" HorizontalAlignment="Left" Height="23" Margin="2,27,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="(*)" HorizontalAlignment="Left" Margin="33,27,0,0" VerticalAlignment="Top" Foreground="Red"/>
        <Label x:Name="lblItem" Content="Tên sản phẩm:" HorizontalAlignment="Left" Margin="46,55,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtItem" HorizontalAlignment="Left" Height="23" Margin="2,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="370" Grid.Column="1"/>
        <Label x:Name="lblDescription" Content="Mô tả:" HorizontalAlignment="Left" Margin="89,81,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Height="51" Margin="2,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="370" Grid.Column="1"/>
        <Label x:Name="lblCategory" Content="Nhóm sản phẩm:" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtCategory" HorizontalAlignment="Left" Height="23" Margin="2,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblCondition" Content="Điều kiện:" HorizontalAlignment="Left" Margin="71,165,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtCondition" HorizontalAlignment="Left" Height="23" Margin="2,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <Label x:Name="lblPurchasePrice" Content="Giá mua:" HorizontalAlignment="Left" Margin="77,193,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtPurchasePrice" HorizontalAlignment="Left" Height="23" Margin="2,193,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="(*)" HorizontalAlignment="Left" Margin="67,221,0,0" VerticalAlignment="Top" Foreground="Red" RenderTransformOrigin="0.5,2"/>
        <Label x:Name="lblSalesPrice" Content="Giá bán:" HorizontalAlignment="Left" Margin="81,221,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtSalesPrice" HorizontalAlignment="Left" Height="23" Margin="2,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblCurrentValue" Content="Giá hiện tại:" HorizontalAlignment="Left" Margin="62,249,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtCurrentValue" HorizontalAlignment="Left" Height="23" Margin="2,249,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblLocation" Content="Vị trí:" HorizontalAlignment="Left" Margin="97,277,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtLocation" HorizontalAlignment="Left" Height="23" Margin="2,277,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblManufacrture" Content="Nhà sản xuất:" HorizontalAlignment="Left" Margin="53,305,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtManufactorer" HorizontalAlignment="Left" Height="23" Margin="2,305,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblModel" Content="Kiểu mẫu:" HorizontalAlignment="Left" Margin="72,333,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtModel" HorizontalAlignment="Left" Height="23" Margin="2,333,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblComment" Content="Chú thích:" HorizontalAlignment="Left" Margin="71,361,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtComment" HorizontalAlignment="Left" Height="23" Margin="2,361,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="493" Grid.Column="1"/>
        <Label x:Name="lblAttachments" Content="Tập tin đính kèm:" HorizontalAlignment="Left" Margin="32,389,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtAttachments" HorizontalAlignment="Left" Height="23" Margin="2,389,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblAcquiredDate" Content="Ngày có được:" HorizontalAlignment="Left" Margin="47,417,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtAccquiredDate" HorizontalAlignment="Left" Height="23" Margin="2,417,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="lblRetiredDate" Content="Ngày bỏ:" HorizontalAlignment="Left" Margin="76,442,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.403,0.528" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtRetireDate" HorizontalAlignment="Left" Height="23" Margin="2,445,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <Button x:Name="btnUpdate" Content="Cập nhật" HorizontalAlignment="Left" Margin="35,543,0,0" VerticalAlignment="Top" Width="75" Background="Blue" Foreground="White" BorderBrush="Blue" Height="31" Grid.Column="1"/>
        <Button x:Name="btnDelete" Content="Xóa" HorizontalAlignment="Left" Margin="115,543,0,0" VerticalAlignment="Top" Width="37"  Background="Red" Foreground="White" BorderBrush="Red" Height="31" Grid.Column="1"/>
        <Button x:Name="btnInsert" Content="Thêm" HorizontalAlignment="Left" Margin="158,543,0,0" VerticalAlignment="Top" Width="42"  Background="Green" Foreground="White" BorderBrush="Green" RenderTransformOrigin="1.906,0.5" Height="31" Grid.Column="1"/>


    </Grid>
</Window>
